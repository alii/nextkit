{
	"compilerOptions": {
		"target": "ES6",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": ["node_modules", "dist"]
}
